{
  "info": {
    "name": "Booking System API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Login - Success",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/account/sessions/email",
              "host": ["{{baseUrl}}"],
              "path": ["account", "sessions", "email"]
            }
          }
        },
        {
          "name": "2. Login - Invalid Credentials",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"wrong@example.com\",\n    \"password\": \"wrongpassword\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/account/sessions/email",
              "host": ["{{baseUrl}}"],
              "path": ["account", "sessions", "email"]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "3. Create Booking - Success",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Appwrite-Project",
                "value": "{{projectId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"roomId\": \"room123\",\n    \"checkInDate\": \"2024-04-01\",\n    \"checkOutDate\": \"2024-04-03\",\n    \"guests\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/databases/{{databaseId}}/collections/{{bookingsCollectionId}}/documents",
              "host": ["{{baseUrl}}"],
              "path": ["databases", "{{databaseId}}", "collections", "{{bookingsCollectionId}}", "documents"]
            }
          }
        },
        {
          "name": "4. Get User Bookings - Success",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Appwrite-Project",
                "value": "{{projectId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/databases/{{databaseId}}/collections/{{bookingsCollectionId}}/documents?queries[]=equal(\"userId\",\"{{userId}}\")",
              "host": ["{{baseUrl}}"],
              "path": ["databases", "{{databaseId}}", "collections", "{{bookingsCollectionId}}", "documents"],
              "query": [
                {
                  "key": "queries[]",
                  "value": "equal(\"userId\",\"{{userId}}\")"
                }
              ]
            }
          }
        },
        {
          "name": "5. Delete Booking - Success",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "X-Appwrite-Project",
                "value": "{{projectId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/databases/{{databaseId}}/collections/{{bookingsCollectionId}}/documents/{{bookingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["databases", "{{databaseId}}", "collections", "{{bookingsCollectionId}}", "documents", "{{bookingId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://cloud.appwrite.io/v1"
    },
    {
      "key": "projectId",
      "value": "your-project-id"
    },
    {
      "key": "databaseId",
      "value": "your-database-id"
    },
    {
      "key": "bookingsCollectionId",
      "value": "your-bookings-collection-id"
    },
    {
      "key": "userId",
      "value": "test-user-id"
    },
    {
      "key": "bookingId",
      "value": "test-booking-id"
    }
  ]
} 